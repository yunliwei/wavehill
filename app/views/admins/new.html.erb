<script>
    $(document).ready(function(){

        $("#adminForm").validate({
            rules: {
                'admin[name]': "required",
                'admin[login]': {
                    required: true,
                    minlength: 5,
                    remote:{
                        url: "admins/valilogin", //后台处理程序
                        type: "get",  //数据发送方式
                        dataType: "json",       //接受数据格式
                        data:  {                     //要传递的数据
                            login: function() {
                                return $("#admin_login").val();
                            }
                        }
                    }
                },
                'admin[password]': {
                    required: true,
                    minlength: 5
                },
                'admin[password_confirmation]': {
                    required: true,
                    minlength: 5,
                    equalTo: '#admin_password'
                }

            },
            messages: {
                'admin[name]': "姓名不能为空",
                'admin[login]': {
                    required: "请输入用户名",
                    minlength: "用户名不能少于5个字母",
                    remote:'用户已存在'
                },
                'admin[password]': {
                    required: "请输入密码",
                    minlength: "密码长度不能小于 5 个字母"
                },
                'admin[password_confirmation]': {
                    required: "请输入密码",
                    minlength: "密码长度不能小于 5 个字母",
                    equalTo: "两次密码输入不一致"
                }

            }
        });

        if($('#smt').prop("disabled")==true)
        {
            alert('1');
            $('.close').click();
        }

        $('#smt').click(function(){

        });


    });
</script>

<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  <h4 class="modal-title">创建管理员</h4>

</div>
<div class="modal-body">

  <%= form_for(@admin,:html => {:class=>'form-horizontal m-t',:multipart => true,:id=>'adminForm'}) do |f| %>
      <div class="form-group">
        <label class="col-sm-3 control-label">姓名：</label>
        <div class="col-sm-8">
          <%= f.text_field :name,class:'form-control','aria-required':'true' %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label">账户：</label>
        <div class="col-sm-8">
          <%= f.text_field :login,class:'form-control','aria-required':'true' %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label">密码：</label>
        <div class="col-sm-8">
          <%= f.password_field :password,class:'form-control','aria-required':'true' %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label">确认密码：</label>
        <div class="col-sm-8">
          <%= f.password_field :password_confirmation,class:'form-control','aria-required':'true' %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label">权限：</label>
        <div class="col-sm-8">
          <%= f.text_field :auth,class:'form-control','aria-required':'true' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-4 col-sm-offset-3">
          <%= f.submit '确定',class:'btn btn-primary',id:'smt' %>
        </div>
      </div>
  <% end %>
</div>
